                </Trigger>

                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Background" Value="Gray"/>
                </Trigger>
            </Style.Triggers>
            
        </Style>
   
        <Style TargetType="DataGridCell">
