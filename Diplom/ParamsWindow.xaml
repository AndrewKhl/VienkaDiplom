<Window x:Class="Diplom.ParamsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Параметры" Height="1000" Width="600" >

    <Window.Resources>
        <Style x:Key="TextViewStyle1Column">
            <Setter Property="TextBlock.HorizontalAlignment" Value="Right" />
            <Setter Property="TextBlock.Margin" Value="5 0" />
            <Setter Property="Grid.Column" Value="1"/>
        </Style>

        <Style x:Key="TextViewStyle2Column">
            <Setter Property="TextBlock.HorizontalAlignment" Value="Right" />
            <Setter Property="TextBlock.Margin" Value="5 0" />
            <Setter Property="Grid.Column" Value="2"/>
        </Style>
    </Window.Resources>
    <Grid>
        <TreeView >
            <TreeViewItem Header="МД-1Р">
                <TreeViewItem Header="Паспорт">
                    <TreeViewItem Header="Режим работы"></TreeViewItem>
                    <TreeViewItem Header="Слот 1"></TreeViewItem>
                    <TreeViewItem Header="Версия фрэймера"></TreeViewItem>
                    <TreeViewItem Header="Версии ПО" HorizontalContentAlignment="Stretch">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="Протокол"/>
                            <TextBlock Grid.Row="1" Text="Загрузчик Б..."/>
                            <TextBlock Grid.Row="2" Text="CPU БМУ"/>
                            <TextBlock Grid.Row="3" Text="ПЛИС БМУ"/>

                            <TextBlock Grid.Row="0" Text="2" Style="{StaticResource TextViewStyle1Column}"/>
                            <TextBlock Grid.Row="1" Text="7" Style="{StaticResource TextViewStyle1Column}"/>
                            <TextBlock Grid.Row="2" Text="5" Style="{StaticResource TextViewStyle1Column}"/>
                            <TextBlock Grid.Row="3" Text="2" Style="{StaticResource TextViewStyle1Column}"/>
                        </Grid>
                    </TreeViewItem>
                </TreeViewItem>
                <TreeViewItem Header="Телеметрия">
                    <TreeViewItem>
                        <TreeViewItem.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"></ColumnDefinition>
                                    <ColumnDefinition Width="150"></ColumnDefinition>
                                    <ColumnDefinition Width="150"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Флаги ошибок" Grid.Column="0"/>
                                <TextBlock Text="Ствол 1" Grid.Column="1" Style="{StaticResource TextViewStyle1Column}"/>
                                <TextBlock Text="Ствол 2" Grid.Column="2" Style="{StaticResource TextViewStyle1Column}"/>
                            </Grid>
                        </TreeViewItem.Header>
                        <Grid Margin="-20,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Прм. ствол" Grid.Row="0"/>
                            <TextBlock Text="Захват СЦС" Grid.Row="1" />
                            <TextBlock Text="Раб. ствол" Grid.Row="2" />

                            <TextBlock Text="норма" Grid.Row="0" Style="{StaticResource TextViewStyle1Column}"/>
                            <TextBlock Text="нет" Grid.Row="1" Style="{StaticResource TextViewStyle1Column}"/>
                            <TextBlock Text="норма" Grid.Row="2" Style="{StaticResource TextViewStyle1Column}"/>

                            <TextBlock Text="нет" Grid.Row="1" Style="{StaticResource TextViewStyle2Column}"/>
                        </Grid>
                    </TreeViewItem>
                    
                    <TreeViewItem>
                        <TreeViewItem.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"></ColumnDefinition>
                                    <ColumnDefinition Width="150"></ColumnDefinition>
                                    <ColumnDefinition Width="150"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Состояние E1" Grid.Column="0"/>
                                <TextBlock Text="Состояние" Grid.Column="1" Style="{StaticResource TextViewStyle1Column}"/>
                                <TextBlock Text="Контроль" Grid.Column="2" Style="{StaticResource TextViewStyle2Column}"/>
                            </Grid>
                        </TreeViewItem.Header>

                        <Grid Margin="-20,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="1E1" Grid.Row="0"/>
