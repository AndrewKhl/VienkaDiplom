                            <TextBlock Text="Приёмный ствол" Grid.Row="15"/>
                            <TextBlock Text="первый" Grid.Row="15" Style="{StaticResource TextViewStyle1Column}"/>
                        </Grid>
                    </TreeViewItem>
                    
                    
                    <TreeViewItem>
                        <TreeViewItem.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"></ColumnDefinition>
                                    <ColumnDefinition Width="150"></ColumnDefinition>
                                    <ColumnDefinition Width="150"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="ППУ" Grid.Column="0"/>
                                <TextBlock Text="Ствол 1" Grid.Column="1" Style="{StaticResource TextViewStyle1Column}"/>
                                <TextBlock Text="Ствол 2" Grid.Column="2" Style="{StaticResource TextViewStyle2Column}"/>
                            </Grid>
                        </TreeViewItem.Header>
                        <Grid Margin="-20,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Связь с ППУ" Grid.Row="0"/>
                            <TextBlock Text="100%" Grid.Row="0" Style="{StaticResource TextViewStyle1Column}"/>

                            <TextBlock Text="Уровень сигнала" Grid.Row="1"/>
                            <TextBlock Text="21%" Grid.Row="1" Style="{StaticResource TextViewStyle1Column}"/>

                            <TextBlock Text="К3 кабель" Grid.Row="2"/>
                            <TextBlock Text="нет" Grid.Row="2" Style="{StaticResource TextViewStyle1Column}"/>
                            <TextBlock Text="нет" Grid.Row="2" Style="{StaticResource TextViewStyle2Column}"/>
                        </Grid>
                    </TreeViewItem>
                    
                    
                    <TreeViewItem>
                        <TreeViewItem.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"></ColumnDefinition>
                                    <ColumnDefinition Width="150"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Дискретные каналы" Grid.Column="0"/>
                                <TextBlock Text="Состояние" Grid.Column="1" Style="{StaticResource TextViewStyle1Column}"/>
                            </Grid>
                        </TreeViewItem.Header>

                        <Grid Margin="-20,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Канал 1вх" Grid.Row="0"/>
                            <TextBlock Text="выкл." Grid.Row="0" Style="{StaticResource TextViewStyle1Column}"/>

                            <TextBlock Text="Канал 2вх" Grid.Row="1"/>
                            <TextBlock Text="выкл." Grid.Row="1" Style="{StaticResource TextViewStyle1Column}"/>

                            <TextBlock Text="Канал 3вх" Grid.Row="2"/>
                            <TextBlock Text="выкл." Grid.Row="2" Style="{StaticResource TextViewStyle1Column}"/>

                            <TextBlock Text="Канал 4вх" Grid.Row="3"/>
                            <TextBlock Text="выкл." Grid.Row="3" Style="{StaticResource TextViewStyle1Column}"/>
                        </Grid>
                    </TreeViewItem>
                    
                    
                </TreeViewItem>
                <TreeViewItem Header="Управление">
                    <TreeViewItem>
                        <TreeViewItem.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"></ColumnDefinition>
                                    <ColumnDefinition Width="150"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Режим резервирования" Grid.Column="0"/>
