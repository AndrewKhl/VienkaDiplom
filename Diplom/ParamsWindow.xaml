<Window x:Class="Diplom.ParamsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Параметры" Height="1000" Width="600" >

    <Window.Resources>
        <Style x:Key="TextViewStyleNumber">
            <Setter Property="TextBlock.HorizontalAlignment" Value="Right" />
            <Setter Property="TextBlock.Margin" Value="5 0" />
            <Setter Property="Grid.Column" Value="1"/>
        </Style>
    </Window.Resources>
    <Grid>
        <TreeView >
            <TreeViewItem Header="МД-1Р">
                <TreeViewItem Header="Паспорт">
                    <TreeViewItem Header="Режим работы"></TreeViewItem>
                    <TreeViewItem Header="Слот 1"></TreeViewItem>
                    <TreeViewItem Header="Версия фрэймера"></TreeViewItem>
                    <TreeViewItem Header="Версии ПО" HorizontalContentAlignment="Stretch">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="Протокол"/>
                            <TextBlock Grid.Row="1" Text="Загрузчик Б..."/>
                            <TextBlock Grid.Row="2" Text="CPU БМУ"/>
                            <TextBlock Grid.Row="3" Text="ПЛИС БМУ"/>

                            <TextBlock Grid.Row="0" Text="2" Style="{StaticResource TextViewStyleNumber}"/>
                            <TextBlock Grid.Row="1" Text="7" Style="{StaticResource TextViewStyleNumber}"/>
                            <TextBlock Grid.Row="2" Text="5" Style="{StaticResource TextViewStyleNumber}"/>
                            <TextBlock Grid.Row="3" Text="2" Style="{StaticResource TextViewStyleNumber}"/>
                        </Grid>
                    </TreeViewItem>
                </TreeViewItem>
                <TreeViewItem Header="Телеметрия"></TreeViewItem>
                <TreeViewItem Header="Управление"></TreeViewItem>
            </TreeViewItem>
            <TreeViewItem Header="ППУ">
                <TreeViewItem Header="Паспорт"></TreeViewItem>
                <TreeViewItem Header="Телеметрия"></TreeViewItem>
                <TreeViewItem Header="Управление"></TreeViewItem>
            </TreeViewItem>
            <TreeViewItem Header="БИ-RS">
                <TreeViewItem Header="Паспорт"></TreeViewItem>
                <TreeViewItem Header="Управление"></TreeViewItem>
            </TreeViewItem>
            <TreeViewItem Header="БИ-ETH">
                <TreeViewItem Header="Паспорт"></TreeViewItem>
                <TreeViewItem Header="Телеметрия"></TreeViewItem>
                <TreeViewItem Header="Управление"></TreeViewItem>
            </TreeViewItem>
        </TreeView>
    </Grid>
</Window>
