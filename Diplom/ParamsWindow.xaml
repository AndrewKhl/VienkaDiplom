        <Style x:Key="TextViewStyle1Column">
            <Style.Setters>
                <Setter Property="TextBlock.HorizontalAlignment" Value="Right"/>
                <Setter Property="TextBlock.Margin" Value="5 0"/>
                <Setter Property="Grid.Column" Value="1"/>
                <Setter Property="TextBlock.Visibility" Value="Hidden"/>
                <Setter Property="TextBlock.Padding" Value="1"/>
                <Setter Property="TextBlock.Tag" Value="changedElement"/>
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="TextBlock.IsHitTestVisible" Value="True">
                    <Setter Property="TextBlock.Foreground" Value="Black"/>
                </Trigger>

                <Trigger Property="TextBlock.IsMouseOver" Value="true">
                    <Setter Property="TextBlock.Foreground" Value="White"/>
                    <Setter Property="TextBlock.Background" Value="Gray"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TextViewStyle2Column">
