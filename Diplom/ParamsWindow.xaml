                                <TextBlock Text="Ствол 2" Grid.Column="2" Style="{StaticResource TextViewStyle2Column}"/>
                            </Grid>
                        </TreeViewItem.Header>

                        <Grid Margin="-20,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="BER 1c" Grid.Row="0"/>
                            <TextBlock Text="5e-4 [1e-6]" Grid.Row="0" Style="{StaticResource TextViewStyle1Column}"/>

                            <TextBlock Text="BER 15мин" Grid.Row="1"/>
                            <TextBlock Text="1e-4 [6e-9]" Grid.Row="1" Style="{StaticResource TextViewStyle1Column}"/>

                            <TextBlock Text="BER 1c вых" Grid.Row="2"/>
                            <TextBlock Text="5e-4 [1e-3]" Grid.Row="2" Style="{StaticResource TextViewStyle1Column}"/>
                            
                            <TextBlock Text="BER 15мин" Grid.Row="3"/>
                            <TextBlock Text="1e-4 [8e-4]" Grid.Row="3" Style="{StaticResource TextViewStyle1Column}"/>

                            <TextBlock Text="ES вых" Grid.Row="4"/>
                            <TextBlock Text="0" Grid.Row="4" Style="{StaticResource TextViewStyle1Column}"/>

                            <TextBlock Text="SES вых" Grid.Row="5"/>
                            <TextBlock Text="0" Grid.Row="5" Style="{StaticResource TextViewStyle1Column}"/>
                            
                            <TextBlock Text="UAS вых" Grid.Row="6"/>
                            <TextBlock Text="216" Grid.Row="6" Style="{StaticResource TextViewStyle1Column}"/>

                            <TextBlock Text="ESR вых" Grid.Row="7"/>
                            <TextBlock Text="0" Grid.Row="7" Style="{StaticResource TextViewStyle1Column}"/>

                            <TextBlock Text="SESR вых" Grid.Row="8"/>
                            <TextBlock Text="0" Grid.Row="8" Style="{StaticResource TextViewStyle1Column}"/>

                            <TextBlock Text="Время измерения" Grid.Row="9"/>
