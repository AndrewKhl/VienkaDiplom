<UserControl x:Class="Diplom.Models.StationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Diplom.Models"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <SolidColorBrush Color="Green" Opacity="0.5" />
        </Grid.Background>
        <TextBlock Name="stationName" HorizontalAlignment="Center"/>
        <Image Grid.Row="1" Name="image" Stretch="None" />
        
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Станция">
                    <MenuItem Header="Свойсва">
                        <MenuItem.Icon>
                            <Image Source="pack://application:,,,/Resources/Icons/CustomFile.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Удалить">
                        <MenuItem.Icon>
                            <Image Source="pack://application:,,,/Resources/Icons/Removed.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Сеть (PDH)">
                    <MenuItem Header="Выделить"></MenuItem>
                    <MenuItem Header="Свойства"></MenuItem>
                    <MenuItem Header="Удалить">
                        <MenuItem.Icon>
                            <Image Source="pack://application:,,,/Resources/Icons/Removed.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <Separator></Separator>
                <MenuItem Header="Связаться по локальному порту"></MenuItem>
                <MenuItem Header="Связаться по порту А"></MenuItem>
                <MenuItem Header="Связаться по порту Б"></MenuItem>
                <MenuItem Header="Свзяаться по радиоканалу"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Обновить конфигурацию">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/Resources/Icons/RefreshConfiguration.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Протокол станции">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/Resources/Icons/ShowEvents.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Параметры" Click="ShowParametrWindow">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/Resources/Icons/Params.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <!--<MenuItem Header="Выполнить макрос"></MenuItem>-->
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</UserControl>
